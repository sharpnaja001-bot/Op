import os
import discord
from discord.ext import commands

TOKEN = os.environ['DISCORD_TOKEN']  # Token จาก Render

intents = discord.Intents.default()
intents.message_content = True

bot = commands.Bot(command_prefix="!", intents=intents)

@bot.event
async def on_ready():
    print(f"{bot.user} ออนไลน์แล้ว!")

@bot.command()
async def สวัสดี(ctx):
    await ctx.send("สวัสดีครับ! ผมบอทออนไลน์แล้ว!")

bot.run(TOKEN)